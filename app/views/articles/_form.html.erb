<% name ||= "Crear"%>
<h2><%= name%> articulo</h2>
<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message|%>
	<div class="be-red white top-space">
		* <%= message%>
	</div>
	<% end%>
	<div class="field">
		<%= f.text_field :title, placeholder:"Titulo del articulo", class:"form_control"%>	
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder:"Escribe aqui tu articulo", style:"height: 250px;", class:"form_control"%>	
	</div>
	<div>
		<%=f.submit "Guardar", class:"btn"%>
	</div>
<%end%>